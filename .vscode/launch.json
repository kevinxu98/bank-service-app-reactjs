{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000", // Correct port for create-react-app
            "webRoot": "${workspaceFolder}/src", // Point to the src directory
            "sourceMaps": true, // Enable source maps
            "trace": true, // Enable tracing for debugging
            "skipFiles": ["node_modules/**"] // Skip node_modules for cleaner debugging
        }
    ]
}